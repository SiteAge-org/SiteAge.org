---
import { formatAge } from "@siteage/shared";
import type { DomainDetail } from "@siteage/shared";

interface Props {
  data: DomainDetail;
}

const { data } = Astro.props;
const birth = data.verified_birth_at || data.birth_at;
const days = data.age_days || 0;
---

{birth && (
  <div class="card-base p-6 sm:p-8 relative">
    <!-- Left accent line -->
    <div class="absolute left-0 top-4 bottom-4 w-[3px] bg-gradient-to-b from-seal to-seal/30 rounded-full"></div>
    <h2 class="card-title pl-2">Age</h2>
    <div class="flex items-baseline gap-3 pl-2">
      <span class="font-display text-3xl sm:text-4xl text-ink">{formatAge(birth, data.death_at || undefined)}</span>
      <span class="text-ink-muted text-sm font-light">({days.toLocaleString()} days)</span>
    </div>
  </div>
)}
