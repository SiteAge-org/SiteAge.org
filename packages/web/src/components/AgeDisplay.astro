---
import { formatAge } from "@siteage/shared";
import type { DomainDetail } from "@siteage/shared";

interface Props {
  data: DomainDetail;
}

const { data } = Astro.props;
const birth = data.verified_birth_at || data.birth_at;
const days = data.age_days || 0;
---

{birth && (
  <div class="bg-white/60 border border-divider p-6 sm:p-8">
    <h2 class="text-[10px] tracking-[0.3em] uppercase text-seal-dark font-medium mb-4">Age</h2>
    <div class="flex items-baseline gap-3">
      <span class="font-display text-2xl sm:text-3xl text-ink">{formatAge(birth, data.death_at || undefined)}</span>
      <span class="text-ink-muted text-sm font-light">({days.toLocaleString()} days)</span>
    </div>
  </div>
)}
