---
interface Props {
  domain: string;
  firstSnapshotUrl: string | null;
  birthAt: string | null;
}

const { domain, firstSnapshotUrl, birthAt } = Astro.props;
---

{birthAt && (
  <div class="bg-white rounded-lg border border-gray-200 p-6">
    <h2 class="text-sm font-semibold text-gray-500 uppercase tracking-wide mb-4">Timeline</h2>
    <div class="space-y-4">
      <div class="flex items-start gap-3">
        <div class="w-2 h-2 bg-blue-500 rounded-full mt-2 shrink-0"></div>
        <div>
          <p class="font-medium">{new Date(birthAt).toLocaleDateString("en-US", { year: "numeric", month: "long", day: "numeric" })}</p>
          <p class="text-sm text-gray-500">Earliest known snapshot</p>
          {firstSnapshotUrl && (
            <a href={firstSnapshotUrl} target="_blank" rel="noopener noreferrer" class="text-sm text-blue-600 hover:underline">
              View on Wayback Machine &rarr;
            </a>
          )}
        </div>
      </div>
      <div class="flex items-start gap-3">
        <div class="w-2 h-2 bg-green-500 rounded-full mt-2 shrink-0"></div>
        <div>
          <p class="font-medium">Today</p>
          <p class="text-sm text-gray-500">Still going strong</p>
        </div>
      </div>
    </div>
  </div>
)}
