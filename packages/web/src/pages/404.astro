---
import Base from "../layouts/Base.astro";
---

<Base title="Document Not Found">
  <div class="relative max-w-2xl mx-auto px-6 py-24 text-center overflow-hidden">
    <!-- Background decorative pattern -->
    <div class="absolute inset-0 flex items-center justify-center pointer-events-none opacity-[0.03]">
      <svg width="400" height="400" viewBox="0 0 400 400" fill="none">
        <text x="50%" y="50%" dominant-baseline="middle" text-anchor="middle" font-size="280" font-family="serif" fill="currentColor">?</text>
      </svg>
    </div>

    <div class="relative">
      <span class="text-xs tracking-[0.3em] uppercase text-seal-dark font-medium">Error 404</span>
      <p class="font-display text-[8rem] sm:text-[10rem] text-ink/[0.06] leading-none mb-2 select-none">404</p>
      <h1 class="font-display text-2xl sm:text-3xl mb-2 -mt-8 text-ink">Document Not Found</h1>
      <div class="ornament-line max-w-24 mx-auto my-5"></div>
      <p class="text-ink-muted font-light mb-8 max-w-sm mx-auto leading-relaxed">The page you're looking for doesn't exist or has been moved to another archive.</p>
      <a href="/" class="btn-primary">
        Return Home
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 19.5L3 12m0 0l7.5-7.5M3 12h18"/>
        </svg>
      </a>
    </div>
  </div>
</Base>
