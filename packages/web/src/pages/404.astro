---
import Base from "../layouts/Base.astro";
---

<Base title="Page Not Found">
  <div class="max-w-2xl mx-auto px-6 py-24 text-center">
    <p class="font-display text-8xl text-ink/10 mb-4">404</p>
    <h1 class="font-display text-2xl mb-4">Page Not Found</h1>
    <p class="text-ink-muted font-light mb-8">The page you're looking for doesn't exist or has been moved.</p>
    <a href="/" class="inline-flex items-center gap-2 px-6 py-3 bg-ink text-parchment font-medium tracking-wider uppercase text-sm hover:bg-ink-light transition-colors duration-200">
      Return Home
    </a>
  </div>
</Base>
