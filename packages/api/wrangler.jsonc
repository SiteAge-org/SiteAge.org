{
  "name": "siteage-api",
  "main": "src/index.ts",
  "compatibility_date": "2025-02-20",
  "routes": [
    { "pattern": "api.siteage.org", "custom_domain": true }
  ],
  "d1_databases": [
    {
      "binding": "DB",
      "database_name": "siteage-db",
      "database_id": "REPLACE_WITH_ACTUAL_ID",
      "migrations_dir": "src/db/migrations"
    }
  ],
  "kv_namespaces": [
    {
      "binding": "API_CACHE",
      "id": "REPLACE_WITH_ACTUAL_ID"
    }
  ],
  "vars": {
    "ENVIRONMENT": "production"
  },
  // secrets (set via wrangler secret put):
  // - ADMIN_KEY
  // - RESEND_API_KEY
  "triggers": {
    "crons": [
      "0 3 * * *",
      "0 */6 * * *"
    ]
  }
}
